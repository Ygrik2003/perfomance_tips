{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 9,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "binaryDir": "${sourceDir}/.build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_UNITY_BUILD": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_UNITY_BUILD_BATCH_SIZE": {
          "type": "STRING",
          "value": "32"
        },
        "CMAKE_CONFIGURATION_TYPES": {
          "type": "STRING",
          "value": "Debug;Release;RelWithDebInfo;MinSizeRel;"
        }
      }
    },
    {
      "name": "msvc-x64_ninja",
      "inherits": "common",
      "generator": "Ninja"
    }
  ],
  "buildPresets": [
    {
      "name": "libs_speed_msvc-x64_ninja",
      "configurePreset": "msvc-x64_ninja",
      "targets": [
        "libs_speed_shared",
        "libs_speed_static"
      ]
    }
  ]
}